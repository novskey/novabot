<configuration scan="true" debug="false">


    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <file>logs/novabot.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/novabot.%d{yyyy-MM-dd}_%d{HH-mm-ss,aux}.%i.log.gz</fileNamePattern>
            <TimeBasedFileNamingAndTriggeringPolicy class="com.github.novskey.novabot.core.StartupTimeBasedTriggeringPolicy"/>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>[%date{HH:mm:ss}] [ %-5level] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/debug.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/debug.%d{yyyy-MM-dd}_%d{HH-mm-ss,aux}.%i.log.gz</fileNamePattern>
            <TimeBasedFileNamingAndTriggeringPolicy class="com.github.novskey.novabot.core.StartupTimeBasedTriggeringPolicy"/>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>5</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>[%d] [ %-5level] [%thread] %logger{35}: %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/error.%d{yyyy-MM-dd}_%d{HH-mm-ss,aux}.%i.log.gz</fileNamePattern>
            <TimeBasedFileNamingAndTriggeringPolicy class="com.github.novskey.novabot.core.StartupTimeBasedTriggeringPolicy"/>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>[%date{HH:mm:ss}] [%thread] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="JDA" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/jda.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/jda.%d{yyyy-MM-dd}_%d{HH-mm-ss,aux}.%i.log.gz</fileNamePattern>
            <TimeBasedFileNamingAndTriggeringPolicy class="com.github.novskey.novabot.core.StartupTimeBasedTriggeringPolicy"/>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>[%d] [ %-5level] [%thread] %logger{35}: %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>[%date{HH:mm:ss}] [ %-5level] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="nb_STDOUT_DEBUG" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>[%date{HH:mm:ss}] [ %-5level] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="novabot" level="DEBUG" additivity="true">
        <appender-ref ref="DEBUG"/>
        <appender-ref ref="ERROR"/>
        <!-- enable this appender to see novabots debug logs in your console / IDE
             if you enable it in the root logger further below you will see the debug logs of all the other libraries too -->
        <appender-ref ref="NB_STDOUT_DEBUG"/>
    </logger>

    <!-- Gives us a nice JDA log with only JDA output -->
    <logger name="net.dv8tion" level="DEBUG" additivity="true">
        <appender-ref ref="JDA"/>
    </logger>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>